{
	"info": {
		"_postman_id": "django-signals-orm-0x04-collection-auth",
		"name": "Django Signals & ORM 0x04 (With Auth)",
		"description": "Collection for testing Django Signals, ORM optimizations, and Messaging features. Includes Login.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Extract CSRF token from cookies if available and save to variable for POST requests",
							"var csrf_cookie = postman.getResponseCookie(\"csrftoken\");",
							"if (csrf_cookie) {",
							"    pm.collectionVariables.set(\"csrf_token\", csrf_cookie.value);",
						"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"{{username}}\",\n    \"password\": \"{{password}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/login/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"login",
						""
					]
				},
				"description": "Logs in the user and sets the session cookie."
			},
			"response": []
		},
		{
			"name": "Get Unread Messages",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/messages/unread/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"messages",
						"unread",
						""
					]
				},
				"description": "Retrieves unread messages for the logged-in user. (Task 4)"
			},
			"response": []
		},
		{
			"name": "Get Conversation (with User)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/messages/with/{{target_user_id}}/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"messages",
						"with",
						"{{target_user_id}}",
						""
					]
				},
				"description": "Retrieves conversation with a specific user. Cached for 60s. (Task 5)"
			},
			"response": []
		},
		{
			"name": "Get Message Thread",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/messages/{{message_id}}/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"messages",
						"{{message_id}}",
						""
					]
				},
				"description": "Retrieves a message and its threaded replies. (Task 3)"
			},
			"response": []
		},
		{
			"name": "Get Message History",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/messages/{{message_id}}/history/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"messages",
						"{{message_id}}",
						"history",
						""
					]
				},
				"description": "Retrieves the edit history of a specific message. (Task 1)"
			},
			"response": []
		},
		{
			"name": "Delete User (Self)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-CSRFToken",
						"value": "{{csrf_token}}",
						"type": "text",
						"description": "Required for Session Authentication POST requests"
					}
				],
				"url": {
					"raw": "{{base_url}}/user/delete/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"user",
						"delete",
						""
					]
				},
				"description": "Deletes the currently logged-in user account. (Task 2)"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://127.0.0.1:8000",
			"type": "string"
		},
		{
			"key": "username",
			"value": "user1",
			"type": "string"
		},
		{
			"key": "password",
			"value": "password123",
			"type": "string"
		},
		{
			"key": "target_user_id",
			"value": "3",
			"type": "string"
		},
		{
			"key": "message_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "csrf_token",
			"value": "",
			"type": "string"
		}
	]
}